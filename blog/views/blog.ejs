<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Blog</h1>

    <!-- BotÃ£o para novo post -->
    <a href="/cadastrar_post"><button>Novo Post</button></a>

    <!-- Lista de posts cadastrados -->
    <div class="posts">
      <% if (posts.length === 0) { %>
        <p>Sem posts ainda. Seja o primeiro a publicar!</p>
      <% } else { %>
        <% posts.forEach(post => { %>
          <div class="post">
            <h2><%= post.titulo %></h2>
            <h4><%= post.resumo %></h4>
            <p><%= post.conteudo %></p>
            <hr>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>
</body>
</html>