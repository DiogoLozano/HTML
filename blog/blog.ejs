<!-- views/blog.ejs -->
<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Blog</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Blog</h1>
    <a href="/cadastrar_post"><button>Criar Novo Post</button></a>
    <div>
      <% posts.forEach(post => { %>
        <div class="post">
          <h2><%= post.titulo %></h2>
          <p><strong>Resumo:</strong> <%= post.resumo %></p>
          <p><%= post.conteudo %></p>
          <hr>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>