<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="main-container">
    <button class="btn-criar" onclick="location.href='/cadastrar'">Cria Post</button>

    <% posts.forEach(post => { %>
      <div class="post-container">
        <h3><strong><%= post.titulo %></strong></h3>
        <p><%= post.resumo %></p>
        <p><%= post.conteudo %></p>
      </div>
    <% }) %>
  </div>
</body>
</html>